<%=render 'layouts/banner'%>
<div class="container my-5 w-50">
  <h1>My List</h1>
  <ul class="list-group my-5 shadow p-3 mb-5 bg-body rounded">
    <%List.all.each do |list|%>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <% if !list.photo.key.nil? %>
          <%= cl_image_tag list.photo.key, height: 100, width: 100, crop: :fill %>
        <% end %>
        <%=link_to list.name, list_path(list)%>
        <span class="badge text-bg-primary rounded-pill"><%=list.bookmarks.count%></span>
      </li>
    <%end%>
  </ul>
  <%=link_to "Add a new list", new_list_path, class: "btn btn-primary"%>
</div>