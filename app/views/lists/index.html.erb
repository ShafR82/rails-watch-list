<%=render 'layouts/banner'%>
<div class="container my-5">
  <h1>Lists</h1>
  <ul class="list-group my-5">
    <%List.all.each do |list|%>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%=link_to list.name, list_path(list)%>
        <% if !list.photo.key.nil? %>
          <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
        <span class="badge text-bg-primary rounded-pill"><%=list.bookmarks.count%></span>
      </li>
    <%end%>
  </ul>
  <%=link_to "Add a new list", new_list_path, class: "btn btn-primary"%>
</div>