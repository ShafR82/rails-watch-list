<%=render 'layouts/banner'%>
<div class="container my-5">
  <h1>A list detail</h1>
  <p>name=<%=@list.name%> (<%=@list.bookmarks.count%>)</p>
  <% if !@list.photo.key.nil? %>
    <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <div class="row row-cols">
    <%@list.bookmarks.each do |f| %>
      <div class="col">
        <%= render 'card', var: f%>
      </div>
    <%end%>
  </div>
  <%=link_to 'add bookmark', new_list_bookmark_path(@list), class: "btn btn-primary"%>
</div>
